<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pabrou.mppayment">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MPPaymentApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.PaymentAmountActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.PaymentMethodActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/payment_method_title"/>

        <activity
            android:name=".ui.PaymentCardIssuerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/payment_bank_title"/>

        <activity
            android:name=".ui.PaymentInstallmentsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/payment_installments_title"/>

    </application>

</manifest>